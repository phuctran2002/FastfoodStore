<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_Payment_Method">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        android:text="Payment Options"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darkGray"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />


    <Button
        android:id="@+id/btnCash"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background"
        android:drawableStart="@mipmap/cash_foreground"
        android:text="Cash"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.156"
        android:drawableLeft="@mipmap/cash_foreground" />

    <Button
        android:id="@+id/btnCard"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background"
        android:drawableStart="@mipmap/card_foreground"
        android:drawableLeft="@mipmap/card_foreground"
        android:text="Card"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnCash"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCash"
        app:layout_constraintTop_toBottomOf="@+id/btnCash"
        app:layout_constraintVertical_bias="0.042" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="413dp"
        android:layout_height="364dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCard"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/deliver_img_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>