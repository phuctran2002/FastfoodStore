<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback_ratings">


    <ScrollView
        android:layout_width="411dp"
        android:layout_height="730dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#293859"
                android:text="Submit Your Feedback"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/feedback_text"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:hint="Enter yout feedback"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer service and friendy interface" />

            <RadioGroup
                android:id="@+id/Customer_Service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/customer_service_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="excellent" />

                <RadioButton
                    android:id="@+id/customer_service_veryGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="very_good" />

                <RadioButton
                    android:id="@+id/customer_service_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="good" />

                <RadioButton
                    android:id="@+id/customer_service_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="poor" />


            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery speed" />

            <RadioGroup
                android:id="@+id/Delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/delivery_speed_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="excellent" />

                <RadioButton
                    android:id="@+id/delivery_speed_veryGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="very_good" />

                <RadioButton
                    android:id="@+id/delivery_speed_goof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="good" />

                <RadioButton
                    android:id="@+id/delivery_speed_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="poor" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quality" />

            <RadioGroup
                android:id="@+id/Quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/quality_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="excellent" />

                <RadioButton
                    android:id="@+id/quality_verygood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="very_good" />

                <RadioButton
                    android:id="@+id/quality_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="good" />

                <RadioButton
                    android:id="@+id/quality_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="poor" />

            </RadioGroup>


            <Button
                android:id="@+id/Rating"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen20sp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="Rating" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



