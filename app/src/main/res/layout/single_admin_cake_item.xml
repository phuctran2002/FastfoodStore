<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/admin_profile_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@+id/seller_quantity"
                app:layout_constraintTop_toTopOf="@+id/seller_quantity"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/admin_profile_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@+id/seller_price"
                app:layout_constraintTop_toTopOf="@+id/seller_price"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/seller_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Availablity"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@+id/admin_profile_item_image"
                app:layout_constraintTop_toBottomOf="@+id/seller_price" />

            <ImageView
                android:id="@+id/admin_profile_item_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/admin_profile_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="Loading..."
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@+id/admin_profile_item_image"
                app:layout_constraintTop_toTopOf="@+id/admin_profile_item_image"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/seller_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Selling Price - Rs."
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@+id/admin_profile_item_image"
                app:layout_constraintTop_toBottomOf="@+id/admin_profile_item_name"
                android:layout_marginLeft="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>